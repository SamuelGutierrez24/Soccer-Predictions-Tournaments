pipeline {
    agent any

    options {
        timeout(time: 20, unit: 'MINUTES')
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'âœ”ï¸ Clonando repositorio'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Comprobando lockfile y instalando dependencias...'
                sh '''
                
                  if [ -f package-lock.json ]; then
                    echo "â†’ EncontrÃ© package-lock.json, ejecuto npm ci"
                    npm ci
                  else
                    echo "â†’ No hay package-lock.json, ejecuto npm install"
                    npm install --force
                  fi
                '''
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸš€ Ejecutando build de Next.js'
                sh 'NEXT_PUBLIC_API_BASE_URL={\'default\'} npm run build'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build completado con Ã©xito'
        }
        failure {
            echo 'âŒ FallÃ³ el build'
        }
        always {
            echo 'ğŸ§¹ Limpiando workspace'
            cleanWs()
        }
    }
}
